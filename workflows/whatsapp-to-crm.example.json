    {
      "parameters": {
        "functionCode": "// Extraer datos del mensaje de WhatsApp\nconst body = $input.first().json.body;\n\nif (!body || !body.entry || !body.entry[0]) {\n  return [];\n}\n\nconst changes = body.entry[0].changes;\nif (!changes || !changes[0] || !changes[0].value) {\n  return [];\n}\n\nconst value = changes[0].value;\nconst messages = value.messages || [];\n\nif (messages.length === 0) {\n  return [];\n}\n\nconst message = messages[0];\nconst from = message.from;\nconst messageId = message.id;\nconst timestamp = message.timestamp;\nconst text = message.text?.body || '';\n\n// Obtener nombre del contacto si está disponible\nconst contacts = value.contacts || [];\nconst contact = contacts[0] || {};\nconst name = contact.profile?.name || null;\n\n// Branch ID debe venir en el webhook o en metadata\nconst branchId = $input.first().json.branch_id || $env.DEFAULT_BRANCH_ID;\n\nreturn {\n  json: {\n    phone: from,\n    name: name,\n    message: text,\n    message_id: messageId,\n    timestamp: timestamp,\n    branch_id: branchId\n  }\n};"
      },
