    {
      "parameters": {
        "functionCode": "// Verificar horario de respuesta\nconst config = $input.first().json.ai_agent_config;\nconst now = new Date();\nconst hours = now.getHours();\nconst minutes = now.getMinutes();\nconst currentTime = hours * 60 + minutes;\n\nconst startTime = config.response_hours?.start || '09:00';\nconst endTime = config.response_hours?.end || '18:00';\n\nconst [startHour, startMin] = startTime.split(':').map(Number);\nconst [endHour, endMin] = endTime.split(':').map(Number);\n\nconst startMinutes = startHour * 60 + startMin;\nconst endMinutes = endHour * 60 + endMin;\n\nconst isWithinHours = currentTime >= startMinutes && currentTime <= endMinutes;\n\nreturn {\n  json: {\n    ...config,\n    is_within_hours: isWithinHours,\n    current_time: `${hours}:${minutes}`\n  }\n};"
      },
